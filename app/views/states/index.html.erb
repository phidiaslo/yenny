<% title 'Manage States' %>
<% noindex %>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="listing-wrapper">

        <h1>States</h1>

        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @states.each do |state| %>
              <tr>
                <td><%= state.name %></td>
                <td><%= link_to 'Show', state %></td>
                <td><%= link_to 'Edit', edit_state_path(state), remote: true %></td>
                <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <%= link_to 'New State', new_state_path, remote: true %>
      </div>
    </div>
  <div class="col-md-3 right-sidebar">
      <%= render 'dashboard/sidebar' %>
  </div>
  </div>
</div>












