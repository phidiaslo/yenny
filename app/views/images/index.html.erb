<% title 'Manage Images' %>
<% noindex %>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="listing-wrapper">
        <% if @images.present? %>
        <h1>Images</h1>
        
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Image</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @images.each do |image| %>
              <tr>
                <td><%= image_tag image.photo.url(:thumb) %></td>
                <td><%= link_to 'Show', image %></td>
                <td><%= link_to 'Edit', edit_image_path(image) %></td>
                <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
          Your users have not uploaded any images yet!
        <% end %>
      </div>
    </div>
  <div class="col-md-3 right-sidebar">
     <%= render 'dashboard/sidebar' %>
  </div>
  </div>
</div>