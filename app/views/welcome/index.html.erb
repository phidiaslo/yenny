<% title 'Your Place To Buy & Sell Things Online' %>

<%= render 'layouts/jumbotron' %>

<div class="container-fluid no-left-right-pad">
  <div class="container">
  </div>
</div>

<div class="container">

<div class="section-divider">
  <h2>Trending Items</h2>
  <p class="sub-head">Explore shoppers' top finds from around the marketplace.</p>
</div>

<section id="pin-grid" class="test">
<% @listings.first(12).each do |listing| %>
    <div class="white-panel">
        <% @images.where(listing_id: listing).first(1).each do |image| %>
          <%= link_to image_tag(image.photo.url), listing %>
        <% end %>
        
        <div class="caption">
        <%= link_to "#{listing.name.truncate(30)}", listing %><br>
        <p><%= listing.user.username %> <span class="listing-price"><%= "RM #{number_with_precision(listing.price, precision: 2)}" %></span></p>
        </div>
    </div>
<% end %>
</section>
      <center><%= link_to "View All Trending Items", listings_path, class: "btn btn-primary" %></center>
</div>
